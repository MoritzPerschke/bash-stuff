[color]
	ui = auto
[pull]
	rebase = false
[merge]
	tool = vimdiff
[mergetool "vimdiff"]
	prompt = false
	keepBackup = false
	layout = "LOCAL,BASE,REMOTE / MERGED"
[diff]
	tool = nvimdiff
[difftool "nvimdiff"]
	prompt = false
	cmd = nvim -n -d \"$REMOTE\" \"$LOCAL\"
[alias]
	stash-untracked = "!f() {    \
		git stash;               \
		git stash -u;            \
		git stash pop stash@{1}; \
	}; f"
